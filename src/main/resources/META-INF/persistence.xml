<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">

    <persistence-unit name="hello">
        <class>com.example.jpabasic.jpashop.domain.Member</class>
        <class>com.example.jpabasic.jpashop.domain.Order</class>
        <class>com.example.jpabasic.jpashop.domain.Item</class>
        <class>com.example.jpabasic.jpashop.domain.Delivery</class>
        <class>com.example.jpabasic.jpashop.domain.Category</class>
